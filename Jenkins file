pipeline {
    agent any
    environment {
        TF_VAR_example = 'value' // Set any necessary Terraform variables
    }
    stages {
        stage('Checkout') {
            steps {
                git 'https://your-repo-url.git' // Replace with your repo
            }
        }
        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Terraform Plan') {
            steps {
                sh 'terraform plan'
            }
        }
        stage('Terraform Apply') {
            steps {
                input 'Approve Terraform Apply?' // Manual approval step
                sh 'terraform apply -auto-approve'
            }
        }
    }
    post {
        success {
            echo 'Infrastructure provisioned successfully!'
        }
        failure {
            echo 'Infrastructure provisioning failed!'
        }
    }
}
